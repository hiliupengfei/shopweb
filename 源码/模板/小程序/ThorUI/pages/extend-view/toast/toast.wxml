<view class="container">
		<view class="header">
			<view class="title">Toast提示</view>
			<view class="sub-title">自定义icon，传入icon地址即可 </view>
		</view>
		<view class="tui-btn-box">
			<view class="tui-btn-btm">
				<tui-button type="white" shape="circle" bind:click="showToast" data-index="1">操作成功</tui-button>
			</view>
			<view class="tui-btn-btm">
				<tui-button type="white" shape="circle" bind:click="showToast" data-index="2">操作失败</tui-button>
			</view>
			<view class="tui-btn-btm">
				<tui-button type="white" shape="circle" bind:click="showToast" data-index="3">提示信息</tui-button>
			</view>
			<view class="tui-btn-btm">
				<tui-button type="white" shape="circle" bind:click="showToast" data-index="4">提示信息，无icon</tui-button>
			</view>
			<view class="tui-btn-btm">
				<tui-button type="white" shape="circle" bind:click="showToast" data-index="5">操作成功，多行文本</tui-button>
			</view>
			<view class="tui-btn-btm">
				<tui-button type="white" shape="circle" bind:click="showToast" data-index="6">自定义显示时间</tui-button>
			</view>
		</view>
		<!--toast提示-->
		<tui-toast id="tui-tips-ctx"></tui-toast>
	</view>