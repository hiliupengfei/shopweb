<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.pengfei.ssm.mapper.tbUserMapper">
	<insert id="insertUser" parameterType="cn.pengfei.ssm.po.tbUsers" >
		insert into tbUsers (itemID,nickName,avatarUrl,gender,province,city,country,openid) values (sys_guid(),#{nickName},#{avatarUrl},#{gender},#{province},#{city},#{country},#{openID})
	</insert>
	<select id="searchUserByOpenId" parameterType="String" resultType="cn.pengfei.ssm.po.tbUsers">
		select * from tbUsers where OpenId = #{openId}
	</select>
	<update id="updateUserByOpenId" parameterType="tbUsers">
		update tbUsers set nickName=#{nickName} ,avatarUrl=#{avatarUrl} where openid=#{openID}
	</update>
</mapper>